#include <unistd.h>

void	ft_rev_int_tab(int *tab, int size)
{
	int	i;
	int	tmp;

	i = 0;
	while (i < (size / 2))
	{
		tmp = tab[i];
		tab[i] = tab[size -1 -i];
		tab[size -1 -i] = tab[i];
		i++;
	}
}

int	main(void)
{
	int	arr[6] = {4, 2, 3, 1, 5, 6};
	int	i;

	i = 0;
	ft_rev_int_tab(arr, 6);

	while (i < 6)
	{
		arr[i] = arr[i] + 48;
		write(1, &arr[i], 1);
		i++;
	}
}
